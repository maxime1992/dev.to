    "embedme:write": "yarn run embedme",
    "dev-to-git": "dev-to-git"
  },
  "dependencies": {
    "dev-to-git": "1.1.0",
    "embedme": "1.11.0",
    "fs-extra": "^9.0.1",
    "got": "^11.5.2",
    "prettier": "1.18.2"
  }
}
